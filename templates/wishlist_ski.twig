<!doctype html>

<html lang="en">

    {% include 'partials/head.twig' %}

    <body >

    {% include 'partials/navigation.twig' %}

        <main class="container" style="padding-top:30px;">

        <nav arial-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="home.php">Home</a></li>
            <li class="breadcrumb-item"><a href="list.php">Wish List</a></li>
          </ol>
        </nav>
              
              {% for item in wish_items %}
                <div class="row my-2 mb-4 py-2 border-bottom border-primary">
                  <div class="col-md-3">
                    <img class="img-fluid" src="../Images/Skis/{{item.image}}">
                  </div>
                  <div class="col-md-4">
                    <h4>{{item.name}}</h4>
                    <h5 class="price">${{item.price}}</h5>
                    <p>{{item.description | slice(0,120) ~ '...' }}</p>
                    <a href="detail_skiing.php?product_id={{item.product_id}}" class="btn btn-outline-primary">Detail</a>
                  </div>
                  <div class="col-md-5 d-flex flex-column">
                    <form class="form-inline h-100 d-flex flex-column align-items-end justify-content-center" method="get">
                      <input type="hidden" name="product_id" value="{{item.product_id}}">
                      <button class="btn btn-primary" type="submit" name="action" value="delete">Delete</button>
                    </form>
                  </div>
                </div>
              {% endfor %}
        </main>
    </body>

</html>
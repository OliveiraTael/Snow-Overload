<!doctype html>
<html>

    {% include 'partials/head.twig' %}

    <body>
        
        {% include 'partials/navigation.twig' %}
        
        <main class="container-fluid mt-4">

            <nav arial-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="home.php">Home</a></li>
                    <li class="breadcrumb-item"><a href="skiing.php">Skiing</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{detail.product.name}}</li>
                </ol>
            </nav>

            <div class="card">
                <div class="row no-gutters">
                    <aside class="col-sm-5 border-right">
                            <div class="img-big-wrap">
                                {% for image in detail.images %}
                                    <img class="img-fluid" src="../Images/Skis/{{image.image_file_name}}"</img>
                                {% endfor %}
                            </div> <!-- slider-product.// -->
                    </aside>

                    <aside class="col-sm-7">
                        <article class="p-5">
                            <h3 class="title mb-3">{{detail.product.name}}</h3>

                                <div class="mb-3"> 
                                    <var class="price h3 text-warning"> 
                                        <span class="currency">AU $</span><h5>{{detail.product.price}}</h5>
                                    </var>
                                </div> <!-- price-detail-wrap .// -->
                                
                                <dl>
                                    <dt>Description</dt>
                                    <dd><p>{{detail.product.description}}</p></dd>
                                    
                                    <dt>Color</dt>
                                    <dd><p class="title mb-3">{{detail.product.color}}</p></dd>
                                </dl>

                                <hr>
                                    <div class="row">
                                        <div class="col-sm-7">
                                            <dl class="dlist-inline">
                                                <dt>Size:</dt><br>
                                                    {% for size in detail.sizes %}
                                                        <dd>
                                                            <label class="form-check form-check-inline">
                                                                <input class="form-check-input" type="radio" name="inlineRadioOptions">
                                                                <span class="form-check-label">{{size.size}}</span>
                                                            </label>
                                                        </dd>
                                                    {% endfor %}
                                            </dl>  <!-- item-property .// -->
                                        </div> <!-- col.// -->
                                    </div> <!-- row.// -->
                                <hr>

                                <form id="cart-form w-100" method="get">
                                    <div class="d-flex flex-wrap mt-4">
                                        <div class="input-group flex-nowrap mr-4" style="min-width:5em;max-width:8em;">
                                            
                                            <div class="input-group-prepend">
                                                <button id="minus" class="btn btn-primary" type="button">&minus;</button>
                                            </div>

                                            <input id="quantity" type="text" class="form-control text-center" name="quantity" value="1" max="10" min="1" style="min-width:3em;">
                                            <div class="input-group-append">
                                                <button id="plus" class="btn btn-primary" type="button">&plus;</button>
                                            </div>

                                        </div>

                                        <button type="submit" class="btn  btn-outline-primary mr-3" name="add" value="cart">
                                            <i class="fas fa-shopping-cart"></i>Add to Card
                                        </button>
                                        <button type="submit" class="btn btn-danger" name="add" value="list">
                                            <i class="fa fa-heart"></i>
                                        </button>
                                    </div>
                                    <input type="hidden" name="product_id" value="{{detail.product.product_id}}">
                                </form>

                        </article> <!-- card-body.// -->
                    </aside> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card.// -->

        </main>

    </body>

    <script>
        // script for add and minus button in detail page
        $(document).ready(
            () => {
                let qty = $('#quantity').val();
                let max = $('#quantity').attr('max');
               
                $('#plus').click( () => {
                    qty++;
                    if( qty <= max ){
                         $('#quantity').val(qty);
                    }
                });
                $('#minus').click( () => {
                    if( qty > 1 ){
                        qty--;
                        $('#quantity').val(qty);
                    }
                });
            }
        );
        </script>

    {% include 'partials/footer.twig' %}

</html>